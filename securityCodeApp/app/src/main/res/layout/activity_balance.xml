<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_bg"
    tools:context=".Balance">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bg_homepage"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/update_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="end"
            android:src="@drawable/baseline_update_btn" />
        <TextView
            android:id="@+id/total_bal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:hint="Total Balance :"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-30dp"
            android:textStyle="bold"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Remaining_bal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:hint="Remaining Balance :"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/Total_spent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:hint="Total Spent :"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="20dp" />


    </LinearLayout>
</LinearLayout>